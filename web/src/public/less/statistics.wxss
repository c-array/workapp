.x-title {
  font-size: 16px;
  color: #fff;
}
.stats-head-right {
  color: #fff;
}
.stats-head-right i {
  margin-left: 10px;
}
.stats-head-right .icon-list {
  font-size: 20px;
}
.weui-grids {
  background-color: rgba(0, 150, 136, 0.6);
  height: calc(100% - 46px);
}
.weui-grids::before {
  border-color: #4db6ac;
}
.weui-grids .weui-grid {
  text-align: center;
  color: #fff;
}
.weui-grids .weui-grid::before {
  border-color: #4db6ac;
}
.weui-grids .weui-grid::after {
  border-color: #4db6ac;
}
.weui-grids .weui-grid:active {
  background-color: #4db6ac;
}
.weui-grids .weui-grid i {
  font-size: 36px;
}
.weui-grids .weui-grid p {
  padding-top: 10px;
}
.stats-box {
  height: calc(100% - 46px);
}
.stats-box ul {
  display: flex;
  border-bottom: 1px solid #4db6ac;
}
.stats-box ul li {
  position: relative;
  padding: 0 10px;
  height: 35px;
  line-height: 38px;
  text-align: left;
  background-color: #4db6ac;
  border-right: 1px solid #3baca1;
  font-size: 14px;
  color: #fff;
  flex: 1;
}
.stats-box ul li select {
  width: 100%;
  height: 35px;
  background: none;
  color: #fff;
}
.stats-box ul li select option {
  color: #666;
}
.stats-box ul li span {
  display: block;
}
.stats-box ul li i {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  color: #eee;
  width: 35px;
  height: 35px;
  line-height: 35px;
  text-align: center;
}
.stats-box .stats-warp {
  position: relative;
  overflow-y: auto;
  height: calc(100% - 36px);
}
.stats-box .stats-chart {
  margin-bottom: 2px;
  padding: 10px;
  background-color: rgba(255, 255, 255, 0.8);
}
.stats-box .stats-empty h3 {
  font-weight: normal;
  color: #333;
}
.stats-box .stats-empty i {
  color: #f6aa07;
  font-size: 60px;
  text-align: center;
  display: block;
}
.stats-box .stats-empty p {
  text-align: center;
  color: #333;
  padding-top: 10px;
}
.stats-box dl {
  margin-bottom: 5px;
  background-color: #fff;
  /*  rgba(255, 255, 255, 0.6) */
  padding: 10px;
  display: flex;
  flex-wrap: wrap;
}
.stats-box dl dt {
  flex: 0 0 100%;
  padding-bottom: 10px;
  font-size: 16px;
}
.stats-box dl dd {
  flex: 0 0 50%;
  padding: 5px 0;
  font-size: 16px;
}
.stats-box dl .usedTime {
  color: #ff5722;
  font-size: 18px;
  padding-right: 5px;
}
.stats-box dl .people-count {
  flex: 0 0 100%;
  position: relative;
}
.stats-box dl .people-count i {
  position: absolute;
  right: 0;
  bottom: 0;
  color: #009688;
}
.stats-people {
  background-color: rgba(255, 255, 255, 0.8);
  height: calc(100% - 46px);
  overflow-y: auto;
  padding-top: 10px;
}
.search-picker input {
  width: 100%;
  height: 40px;
  border-bottom: 1px solid #eee;
  padding: 0 20px;
}
